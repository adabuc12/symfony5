{% extends 'base.html.twig' %}

{% block title %}Płatności{% endblock %}

{% block body %}


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Number</th>
                <th>Type</th>
                <th>Amount</th>
                <th>Payment_date</th>
                <th>Is_paid</th>
                <th>Is_printed</th>
                <th>Notices</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.id }}</td>
                <td>{{ payment.date ? payment.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ payment.number }}</td>
                <td>{{ payment.type }}</td>
                <td>{{ payment.amount }}</td>
                <td>{{ payment.paymentDate ? payment.paymentDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ payment.isPaid ? 'Yes' : 'No' }}</td>
                <td>{{ payment.isPrinted ? 'Yes' : 'No' }}</td>
                <td>{{ payment.notices }}</td>
                <td>
                    <a href="{{ path('payments_show', {'id': payment.id}) }}">show</a>
                    <a href="{{ path('payments_edit', {'id': payment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('payments_new') }}">Create new</a>
{% endblock %}
