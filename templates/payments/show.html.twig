{% extends 'base.html.twig' %}

{% block title %}Payments{% endblock %}

{% block body %}
    <h1>Payments</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ payment.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ payment.date ? payment.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ payment.number }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ payment.type }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ payment.amount }}</td>
            </tr>
            <tr>
                <th>Payment_date</th>
                <td>{{ payment.paymentDate ? payment.paymentDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Is_paid</th>
                <td>{{ payment.isPaid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Is_printed</th>
                <td>{{ payment.isPrinted ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Notices</th>
                <td>{{ payment.notices }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('payments_index') }}">back to list</a>

    <a href="{{ path('payments_edit', {'id': payment.id}) }}">edit</a>

    {{ include('payments/_delete_form.html.twig') }}
{% endblock %}
