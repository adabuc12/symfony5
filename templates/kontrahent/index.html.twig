{% extends 'base.html.twig' %}

{% block title %}Katalog kontrahentów{% endblock %}

{% block body %}
    
    <h3>Lista Kontrahentów</h3>
<div class="container">
<form class="">
  <div class="row ">
    <div class="col">
        <div class="p-3 border bg-light">
        <label for="inputprice" class="form-label">NAZWA</label>

        <input class="form-control me-2" type="search" placeholder="Szukaj" aria-label="Szukaj" name="search"> 

        </div>
    </div>
<div class="d-grid gap-2 p-2">
 <button class="btn btn-warning" type="submit" action="{{ path('product_index') }}">Filtruj</button>
</div>
</form>
</div>
</div>
<div class="row">

</div>
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>Nazwa kontrahenta</th>
                <th>Miasto</th>
                <th>Nr telefonu</th>
                <th>NIP</th>
                <th>Kod pocztowy</th>
                <th>Ulica, nr lokalu</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for kontrahent in kontrahents %}
            <tr>
                <td>{{ kontrahent.name }}</td>
                <td>{{ kontrahent.Adress }}</td>
                <td>{{ kontrahent.phone }}</td>
                <td>{{ kontrahent.nip }}</td>
                <td>{{ kontrahent.postCode }}</td>
                <td>{{ kontrahent.street }}</td>
                <td>
                    <a href="{{ path('kontrahent_show', {'id': kontrahent.id}) }}" class="btn btn-primary">Pokaż</a>
                    <a href="{{ path('kontrahent_edit', {'id': kontrahent.id}) }}" class="btn btn-success">Edytuj</a>
                    <a href="{{ path('pick_kontrahent', {'id': kontrahent.id}) }}" class="btn btn-warning">Wybierz</a>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">Brak kontrahentów</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('kontrahent_new') }}" class='btn btn-primary'>Dodaj kontrahenta</a>
{% endblock %}
