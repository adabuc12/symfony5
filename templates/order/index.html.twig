{% extends 'base.html.twig' %}

{% block title %}
    {% if app.request.get('_route') == 'order_index' %}Zamówienia{% endif %}
    {% if app.request.get('_route') == 'offer_index' %}Oferty{% endif %}
{% endblock %}
{% block filters %}
    {% if app.request.get('_route') == 'order_index' %} <h3>Lista zamówień</h3>{% endif %}
    {% if app.request.get('_route') == 'offer_index' %} <h3>Lista ofert</h3>{% endif %}

    <form class="form">
        <div class="row">
            <table class="table table-primary">
                <div class="form-group">
                    <td><label for="search_kontrahent">Numer</label><br><input  class="form-control" type="text" name="search_number"></td>
                    <td><label for="search_kontrahent">Kontrahent</label><br><input  class="form-control" type="text" name="search_kontrahent"></td>
                    <td><label for="search_kontrahent">Data zamówienia</label><br><input  class="form-control" type="text" name="search_order_date"></td>
                    <td><label for="search_kontrahent">Status</label><br><input  class="form-control" type="text" name="search_status"></td>
                    <td><label for="search_kontrahent">Data dostawy</label><br><input  class="form-control" type="text" name="search_delivery_date"></td>
                    <td><label for="search_kontrahent">Utworzone przez</label><br><input  class="form-control" type="text" name="search_created_by"></td>
                    <td><button type="submit" class="btn btn-primary m-4">Filtruj</button></td>
                </div>
            </table>
        </div>
    </form>
{% endblock %}
{% block body %}
    {% if orders.haveToPaginate %}
        {{ pagerfanta(orders) }}
    {% endif %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Numer</th>
                <th>Data Zamówienia</th>
                <th>Kontrahent</th>
                <th>Data Dostawy</th>
                <th>Utworzone przez</th>
                <th>Suma</th>
                <th>Status</th>
                <th>Uwagi</th>
            </tr>
        </thead>
        <tbody>
            {% for order in orders %}
                <tr class="clickable-row {% if order.type == 'canceled' %}table-danger {% endif %} {% if order.isOrdered == true and order.status == 'offer' %}table-success{% endif %}" data-href='{{ path('order_edit', {'id': order.id}) }}'>
                    <td>{{ order.number }}</td>
                    <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ order.kontrahent }}</td>
                    <td>{{ order.deliveryDate ? order.deliveryDate|date('Y-m-d') : '' }}</td>
                    <td>{{ order.user.name }} {{ order.user.surname }}</td>
                    <td style="text-align: right;">{{ order.total|number_format(2, '.', ' ') }}</p></td>
                        {% if order.status == 'offer' %}

                        <td>
                         {% if order.type == 'canceled' %}
                            <a href="">
                                <i class="fa-solid fa-rectangle-xmark" style="color:red"></i>
                            </a> 
                        {% endif %}
                            {% if order.isOrdered == true and order.orderId > 0 %}
                            <a href="{{ path('order_edit', {'id': order.orderId}) }}">
                                <i class="fa-solid fa-basket-shopping"></i>
                            </a>{% endif %}
                        </td>{% endif %}
                        {% if order.status == 'order' %}
                            <td>
                                {% if order.type == '' %}
                                    <a href="">
                                        <i class="fa-solid fa-industry"></i>
                                    </a>
                                    <a href="">
                                        <i class="fa-solid fa-envelope"></i>
                                    </a>
                                    <a href="">
                                        <i class="fa-solid fa-truck"></i>
                                    </a>
                                    <a href="">
                                        <i class="fa-solid fa-print"></i>
                                    </a>
                                    <a href="">
                                        <i class="fa-solid fa-circle-info"></i>
                                    </a>
                                    <a href="">
                                        <i class="fa-solid fa-circle-check"></i>
                                    </a>
                                {% endif %}
                                {% if order.type == 'canceled' %}
                                    <a href="">
                                        <i class="fa-solid fa-rectangle-xmark"></i>
                                    </a>
                                {% endif %}

                            </td>{% endif %}
                            <td>{{ order.notice }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">Nie znalazłem zamówień</td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    {% if orders.haveToPaginate %}
                        {{ pagerfanta(orders) }}
                    {% endif %}
                    {% endblock %}

                        {% block footer %}
                            <li><a class="nav-link btn btn-primary" href="{{ path('cart') }}">Utwórz nowy</a></li>
                        {% endblock %}