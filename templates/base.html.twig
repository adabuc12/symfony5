<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Witaj!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
            <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        {% endblock %}
    </head>

    <body class="">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Kołodomu.pl</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('product_index') }}">Produkty</a>
                        </li>
                        <li class="nav-item">
                            <a href="{{ path('kontrahent_index') }}" class="nav-link">Kontrahenci</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('order_index') }}">Zamówienia</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="">Oferty</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('transport_index') }}">Transporty</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('task_index') }}">Zadania</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="">Rozliczenia</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="">Cele</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="">Kadry</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="">Wiki</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="">Statystyki</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="">Ustawienia</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="">Zarządzanie</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="">Eksporty</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="">Reklamacje</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="">Fabryki</a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Szukaj" aria-label="Szukaj" name="search">
                        <button class="btn btn-outline-success" type="submit" action="{{ path('product_index') }}">Szukaj</button>
                    </form>
                    <div class="nav-item p-3">
                        <a href="{{ path('cart') }}" class="btn btn-warning">
                            SCHOWEK
                        </a>
                    </div>
                    <div class="nav-item p-3">
                        {% if app.user %}
                            <a href="{{ path('app_logout') }}" class="text-light">
                                WYLOGUJ
                            </a>
                        {% else %}
                            <a href="{{ path('login') }}" class="btn btn-success">
                                ZALOGUJ
                            </a>
                        {% endif %}    


                    </div>
                </div>
            </div>
        </nav>
        <div class="row p-5">
            {# read and display all flash messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% block body %}{% endblock %}
        <div class="p-3"></div>
    </div>
    <div class="footer">
        
        
        
        <nav class="navbar navbar-expand-lg  navbar-dark bg-dark">

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
      {% block footer %}{% endblock %}
      <li class="nav-item"> <a href="{{ path('task_new') }}" class="btn btn-danger w-100 m-1">Utwórz zadanie</a></li>
    </ul>

  </div>
</nav>

    </div>
</body>
<style>
    .hidden{
        display:none;
    }     
    .footer{
        position: fixed;
        bottom: 36px;
        width: 100%;
    }
</style>
</html>
