{% extends 'base.html.twig' %}

{% block title %}Driver index{% endblock %}

{% block body %}
    <h1>Driver index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Phone</th>
                <th>Registration_number</th>
                <th>Car_wight</th>
                <th>Car_long</th>
                <th>Car_height</th>
                <th>Is_hds</th>
                <th>Axis</th>
                <th>Package_max_weight</th>
                <th>Max_pallets</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for driver in drivers %}
            <tr>
                <td>{{ driver.id }}</td>
                <td>{{ driver.name }}</td>
                <td>{{ driver.surname }}</td>
                <td>{{ driver.phone }}</td>
                <td>{{ driver.registrationNumber }}</td>
                <td>{{ driver.carWight }}</td>
                <td>{{ driver.carLong }}</td>
                <td>{{ driver.carHeight }}</td>
                <td>{{ driver.isHds ? 'Yes' : 'No' }}</td>
                <td>{{ driver.axis }}</td>
                <td>{{ driver.packageMaxWeight }}</td>
                <td>{{ driver.maxPallets }}</td>
                <td>
                    <a href="{{ path('driver_show', {'id': driver.id}) }}">show</a>
                    <a href="{{ path('driver_edit', {'id': driver.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('driver_new') }}">Create new</a>
{% endblock %}
