{% extends 'base.html.twig' %}

{% block title %}Driver{% endblock %}

{% block body %}
    <h1>Driver</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ driver.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ driver.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ driver.surname }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ driver.phone }}</td>
            </tr>
            <tr>
                <th>Registration_number</th>
                <td>{{ driver.registrationNumber }}</td>
            </tr>
            <tr>
                <th>Car_wight</th>
                <td>{{ driver.carWight }}</td>
            </tr>
            <tr>
                <th>Car_long</th>
                <td>{{ driver.carLong }}</td>
            </tr>
            <tr>
                <th>Car_height</th>
                <td>{{ driver.carHeight }}</td>
            </tr>
            <tr>
                <th>Is_hds</th>
                <td>{{ driver.isHds ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Axis</th>
                <td>{{ driver.axis }}</td>
            </tr>
            <tr>
                <th>Package_max_weight</th>
                <td>{{ driver.packageMaxWeight }}</td>
            </tr>
            <tr>
                <th>Max_pallets</th>
                <td>{{ driver.maxPallets }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('driver_index') }}">back to list</a>

    <a href="{{ path('driver_edit', {'id': driver.id}) }}">edit</a>

    {{ include('driver/_delete_form.html.twig') }}
{% endblock %}
